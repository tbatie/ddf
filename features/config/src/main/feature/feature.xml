<features xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="${project.artifactId}-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.3.0"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <feature name="jackson-yaml-reader" version="${project.version}" description="Jackson yaml file format reader">
        <bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.9.6</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.9.6</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.9.6</bundle>
        <bundle>mvn:org.yaml/snakeyaml/1.21</bundle>
        <bundle>mvn:com.fasterxml.jackson.dataformat/jackson-dataformat-yaml/2.9.6</bundle>
    </feature>

    <feature name="ddf-config" version="${project.version}" description="Config Stuff">
        <bundle>mvn:ddf.config/config-api/${project.version}</bundle>
        <bundle>mvn:ddf.config/config-impl/${project.version}</bundle>
        <feature>jackson-yaml-reader</feature>
    </feature>

    <feature name="ddf-config-mapper" version="${project.version}" description="Config Stuff">
        <feature>ddf-config</feature>
        <bundle>mvn:ddf.config/config-mapper-api/${project.version}</bundle>
        <bundle>mvn:ddf.config/config-mapper-impl/${project.version}</bundle>
        <!--<bundle>mvn:ddf.config/restarter/${project.version}</bundle>-->
    </feature>

</features>