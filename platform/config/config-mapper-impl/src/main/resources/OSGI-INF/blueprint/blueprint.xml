<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="eventAdmin" interface="org.osgi.service.event.EventAdmin"/>
    <reference id="sysInfoConfig" interface="org.codice.ddf.config.api.SystemInformationConfiguration"/>
    <reference id="karafSysService" interface="org.apache.karaf.system.SystemService"/>


    <bean id="sysInfoConfigMapper" class="org.codice.ddf.config.mapper.SystemInformationConfigurationMapper">
        <argument ref="eventAdmin" />
        <argument ref="sysInfoConfig" />
        <argument ref="karafSysService" />
    </bean>

    <service ref="sysInfoConfigMapper">
        <interfaces>
            <value>org.codice.ddf.config.mapper.api.ConfigurationMapper</value>
            <value>org.osgi.service.event.EventHandler</value>
        </interfaces>
        <service-properties>
            <entry key="event.topics">
                <array value-type="java.lang.String">
                    <value>system_info_config_change</value>
                </array>
            </entry>
        </service-properties>
    </service>

</blueprint>