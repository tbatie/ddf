<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

    <OCD description="Admin Configuration Policy"
         name="Admin Configuration Policy"
         id="org.codice.ddf.admin.config.policy.AdminConfigPolicy">
        <AD
                description="When enabled, the desired features or apps will only be modifiable and viewable to users with the set attributes.
                &#xA;Example of restricting access of any user without an admin role to the catalog-app : catalog-app=&quot;http://schemas.xmlsoap.org/ws/2005/05/identity/claims/role=admin&quot;"
                name="Feature and App Permissions" id="featurePolicies" required="false"
                type="String"
                default="" cardinality="100"/>
        <!--TODO add an example in here. It will show up in admin without actually configuring it-->

        <AD
                description="When enabled, the desired service will only be modifiable and viewable to users with the set attributes.
                &#xA;Example of restricting access of any user without an admin role to the catalog-app : catalog-app=&quot;http://schemas.xmlsoap.org/ws/2005/05/identity/claims/role=admin&quot;"
                name="Service and Configuration Permissions" id="servicePolicies" required="false"
                type="String"
                default="" cardinality="100"/>
    </OCD>

    <Designate pid="org.codice.ddf.admin.config.policy.AdminConfigPolicy">
        <Object ocdref="org.codice.ddf.admin.config.policy.AdminConfigPolicy"/>
    </Designate>

</metatype:MetaData>